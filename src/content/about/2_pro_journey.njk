<div class="mb-4">
    <p class="text-2xl"> Professional Journey </p>
</div>


{% for step in professional_journey.steps %}

    {% set text_color_config = "text-slate-900 dark:text-slate-100" %}
    {% set bg_config = "bg-zinc-50 dark:bg-slate-700" %}
    {% if (loop.index % 2) == 0  %}
        {% set bg_config = "bg-zinc-100 dark:bg-slate-600" %}
    {% endif %}

    <div class="mb-4 p-6 rounded-lg shadow-lg {{bg_config}}">
        <div class="flex justify-between">
            <h3 class="text-xl font-semibold {{text_color_config}}">{{step.role}}</h3>
            <p class="{{text_color_config}}">{{step.time_start}} - {{step.time_end}}</p>
        </div>
        <h4 class="text-base italic {{text_color_config}}">{{step.company}}, {{step.location}}</h4>
        <ul class="list-disc list-outside ms-4 {{text_color_config}}">
            {% for contributed in step.contributions %}
                <li > {{ contributed }} </li>
            {% endfor %}
        </ul>
    </div>
{% endfor %}